<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_bgColor"
    android:orientation="vertical">


    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/info_user"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@drawable/user"
            android:paddingRight="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="姓名"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/user_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1305030212"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/user_owner_phone"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/write"
        android:orientation="horizontal">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="我的手机号"
            android:textSize="15dp" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/my_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="暂未手机号"
                android:textSize="15dp" />
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/user_change_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/write">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="500"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="修改手机号"
            android:textSize="15dp" />

        <ImageView
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/next"
            android:layout_width="10dp"
            android:layout_height="15dp" />
        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/user_add_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/write">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="500"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="新增手机号"
            android:textSize="15dp" />

        <ImageView
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/next"
            android:layout_width="10dp"
            android:layout_height="15dp" />
        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/user_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/write">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="500"
            android:paddingLeft="20dp"
            android:text="注销登录"
            android:textSize="15dp" />
        <ImageView
        android:layout_weight="1"
        android:paddingRight="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/next"
        android:layout_width="10dp"
        android:layout_height="15dp" />
        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>